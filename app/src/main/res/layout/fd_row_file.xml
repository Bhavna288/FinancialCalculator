<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@android:color/darker_gray"/>

    <LinearLayout
        android:id="@+id/ll_fddetailsview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="6"
        android:background="@color/colorAccent">

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@android:color/darker_gray"
            android:layout_weight="0.02"/>

        <TextView
            android:id="@+id/fdview_month"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/vd_month"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:layout_weight="0.98"
            android:padding="5dp"/>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@android:color/darker_gray"
            android:layout_weight="0.02"/>


        <TextView
            android:id="@+id/fdview_int"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/vd_int"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:layout_weight="2.45"
            android:padding="5dp"/>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@android:color/darker_gray"
            android:layout_weight="0.02"/>



        <TextView
            android:id="@+id/fdview_fd_bal"
            android:padding="5dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/vd_fd_bal"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:layout_weight="2.48" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@android:color/darker_gray"
            android:layout_weight="0.02"/>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@android:color/darker_gray"/>

</LinearLayout>