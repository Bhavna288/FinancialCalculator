<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@android:color/darker_gray"/>

    <LinearLayout
        android:id="@+id/ll_loandetailsview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10"
        android:background="@color/colorAccent">

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@android:color/darker_gray"
            android:layout_weight="0.02"/>


        <TextView
            android:id="@+id/loan_view_month"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/vd_month"
            android:textColor="@android:color/black"
            android:gravity="center"
            android:layout_weight="2.06"
            android:padding="5dp"/>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@android:color/darker_gray"
            android:layout_weight="0.02"/>

        <TextView
            android:id="@+id/loan_view_emi"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="EMI"
            android:textColor="@android:color/black"
            android:gravity="center"
            android:layout_weight="1.98"
            android:padding="5dp"/>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@android:color/darker_gray"
            android:layout_weight="0.02"/>


        <TextView
            android:id="@+id/loan_view_int"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Interest"
            android:textColor="@android:color/black"
            android:gravity="center"
            android:layout_weight="1.90"
            android:padding="5dp"/>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@android:color/darker_gray"
            android:layout_weight="0.02"/>

        <TextView
            android:id="@+id/loan_view_prin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Principal"
            android:textColor="@android:color/black"
            android:gravity="center"
            android:layout_weight="1.98"
            android:padding="5dp"/>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@android:color/darker_gray"
            android:layout_weight="0.02"/>


        <TextView
            android:id="@+id/loan_view_bal"
            android:padding="5dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Balance"
            android:textColor="@android:color/black"
            android:gravity="center"
            android:layout_weight="1.98" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@android:color/darker_gray"
            android:layout_weight="0.02"/>



    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@android:color/darker_gray"/>


</LinearLayout>